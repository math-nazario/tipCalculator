<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Title">
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextViewDescription">
        <item name="fontFamily">@font/nunito</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextInputEdit">
        <item name="android:drawablePadding">8dp</item>
        <item name="fontFamily">@font/nunito</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewDescriptionLabelValues">
        <item name="fontFamily">@font/nunito</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewDescriptionValues">
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewDescriptionResult">
        <item name="fontFamily">@font/nunito</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewResult">
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Button">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>